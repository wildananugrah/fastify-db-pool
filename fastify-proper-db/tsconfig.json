{
  "compilerOptions": {
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "outDir": "dist/cjs",
    "target": "es2015"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
